#include<iostream>
#include<vector>
#include<map>
#include<algorithm>
using namespace std;
typedef long long ll;
int main()
{
    int t;
    cin>>t;
    for(int i=0;i<t;++i)
    {
        int n;
        cin>>n;
        map<int,int>first_pos;
        first_pos[0]=0;
        int cur=0,len=-1;

        for(int j=1;j<=n;++j)
        {
            int val;
            cin>>val;
            if(val%2!=0) cur+=1;
            else cur-=1;
            if(first_pos.count(cur)) len=max(len,j-first_pos[cur]);
            else first_pos[cur]=j;
        }
        cout<<(len ==0 ? -1 : len)<<endl;
    }
    
}
