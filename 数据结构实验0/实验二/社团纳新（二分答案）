#include<iostream>
#include<vector>
using namespace std;

int main(){
    int n;
    cin>>n;
    int k=n/2;
    long long base=0;
    vector<long long>diff;
    diff.reserve(n);
    for(int i=0;i<n;i++){
        long long a,b;
        cin>>a>>b;
        base+=b;
        diff.push_back(a-b);
    }
    //sort(diff.begin(),diff.end(),greater<long long>());
    nth_element(diff.begin(),diff.begin()+k,diff.end(),greater<long long>());
    long long sum=0;
    for(int i=0;i<k;++i)sum+=diff[i];
    long long ret=base+sum;
    cout<<ret;

}
